pipeline {
    agent any 

    stages {
        stage("Checkout") {
            steps {
                checkout scm
            }
        }

        stage("Install Dependencies") {
            steps {
                sh 'npm install' // Install npm dependencies
            }
        }

        stage("Test") {
            steps {
                sh 'npm test' // Run tests
            }
        }

        stage("Build") {
            steps {
                sh 'npm run build' // Build the project
            }
        }
    }
}
